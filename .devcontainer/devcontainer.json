// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
	"name": "Develop for nlp and machine learning",
	"privileged": true,
	"dockerComposeFile":[
		"docker-compose.yml"
	],
	"service": "devcontainer",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",              // Python desteği için temel uzantı
				"ms-python.vscode-pylance",      // Python için gelişmiş dil sunucusu ve IntelliSense
				"ms-toolsai.jupyter",            // Jupyter desteği, notebook'ları VS Code içinde çalıştırabilmek için
				"ms-azuretools.vscode-docker",   // Docker yönetimi
				"esbenp.prettier-vscode",        // Kod formatlama (özellikle JSON ve YAML için)
				"visualstudioexptteam.vscodeintellicode",  // Yapay zeka destekli kod tamamlama
				"redhat.vscode-yaml",            // YAML dosyaları için destek
				"kevinrose.vsc-python-indent",   // Python'da daha iyi indent desteği
				"ms-python.black-formatter",     // Black ile otomatik Python kod formatlama
				"ms-python.flake8",              // Python için linting (kod kalitesi ve hata denetimi)
				"eamodio.gitlens",               // Git entegrasyonu ve geliştirilmiş Git araçları
				"mhutchie.git-graph",
				"Gruntfuggly.todo-tree",
				"github.vscode-pull-request-github", // GitHub ile entegre çalışma (pull request'leri yönetme)
				"bungcip.better-toml",           // TOML dosyaları için destek
				"streetsidesoftware.code-spell-checker", // Kod yazım hatalarını kontrol eder
				"ms-toolsai.vscode-ai",          // Yapay zeka modelleri geliştirmek için AI araçları
				"ms-vscode-remote.remote-containers",  // Devcontainer desteği
				"mutantdino.resourcemonitor"

			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8888],
	"portsAttributes": {
		"8888": {
		  "label": "Jupyter Notebook",
		  "onAutoForward": "notify"
		}
	  },

	"workspaceFolder": "/workspace",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "python --version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
